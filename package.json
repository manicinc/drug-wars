{
    "name": "drugwars",
    "version": "0.1.0",
    "description": "The DrugWars desktop application.",
    "author": "Your Name",
    "license": "MIT",
    "private": true,
    "main": "electron.js",
    "scripts": {
        "start": "npx electron .",
        "pack": "electron-builder --dir",
        "release": "standard-version",
        "release:electron": "electron-builder --publish always",
        "postinstall": "electron-builder install-app-deps"
    },
    "dependencies": {
        "electron-log": "^5.1.5",
        "electron-updater": "^6.2.1"
    },
    "devDependencies": {
        "electron": "^29.1.5",
        "electron-builder": "^24.13.3",
        "standard-version": "^9.5.0"
    },
    "build": {
        "appId": "com.manicinc.drugwars",
        "productName": "DrugWars",
        "directories": {
            "output": "release/"
        },
        "files": [
            "index.html",
            "electron.js",
            "preload.js",
            "package.json",
            "node_modules/"
        ],
        "win": {
            "target": "nsis",
            "icon": "assets/icon.ico"
        },
        "mac": {
            "target": "dmg",
            "category": "public.app-category.games",
            "icon": "assets/icon.png"
        },
        "linux": {
            "target": [
                {
                    "target": "AppImage",
                    "arch": ["x64"]
                }
            ],
            "category": "Game",
            "icon": "assets/icon.png"
        },
        "publish": {
            "provider": "github",
            "owner": "manicinc",
            "repo": "drug-wars"
        }
    }
}